<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="@dimen/dp_8">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="@dimen/dp_10"
            android:orientation="vertical">
            <EditText
                android:id="@+id/logTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Title"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/dp_10"
                android:backgroundTint="@color/grey_bg"/>
            <EditText
                android:id="@+id/location_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Location name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:layout_marginTop="@dimen/dp_10"
                android:backgroundTint="@color/grey_bg"/>
            <TextView android:id="@+id/date_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/grey_bg"
            android:layout_marginTop="@dimen/dp_10"
            android:textColorHint="@color/black"
            android:hint="@string/date_text"/>
            <Spinner
                android:id="@+id/tide_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"></Spinner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_bg"></LinearLayout>
            <Spinner
                android:id="@+id/moon_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"></Spinner>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/grey_bg"></LinearLayout>
            <EditText
                android:id="@+id/weather"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/grey_bg"
                android:layout_marginTop="@dimen/dp_10"
                android:textColorHint="@color/black"
                android:hint="Weather"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/longitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey_bg"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColorHint="@color/black"
                    android:hint="Longitide"/>
                <EditText
                    android:id="@+id/latitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/grey_bg"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textColorHint="@color/black"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:hint="Latitude"/>

        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="PUBLIC"/>
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10"
                   android:button="@drawable/checbox_selector"
                    />
            </LinearLayout>
            <EditText
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:hint="@string/description_txt"
                android:background="@color/grey_bg"
                android:gravity="top|left"
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                />
            <Button
                android:id="@+id/save_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/drawer_bg"
                android:textColor="@color/white"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:text="@string/save_txt"/>
        </LinearLayout>
    </ScrollView>

</LinearLayout>