<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/actionbar_height" />


    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg2"
        android:fillViewport="true"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <ImageView
                    android:id="@+id/iv_friend"
                    android:layout_width="@dimen/dp_60"
                    android:layout_height="@dimen/dp_60"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/cf_list_no_image_thumbnail" />

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/tv_add_friemd"
                    android:layout_toRightOf="@id/iv_friend"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="BIG RED"
                    android:textColor="@color/drawer_bg"
                    android:textSize="@dimen/sp_20" />


                <TextView
                    android:id="@+id/tv_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_friend"
                    android:layout_toLeftOf="@+id/tv_add_friemd"
                    android:layout_toRightOf="@id/iv_friend"
                    android:paddingLeft="@dimen/dp_5"
                    android:text="Country: Australia" />

                <TextView
                    android:id="@+id/tv_add_friemd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="@string/add_friend"
                    android:textColor="@color/drawer_bg" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/lighter_gray"
                android:padding="@dimen/dp_10"
                android:text="@string/about_me"
                android:textColor="@color/drawer_bg" />

            <TextView
                android:id="@+id/about_me_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10"
                android:text="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/lighter_gray"
                android:padding="@dimen/dp_10"
                android:text="@string/fishing_preferences"
                android:textColor="@color/drawer_bg" />

            <TextView
                android:id="@+id/tv_preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10" />

            <Button
                android:id="@+id/btn_my_albums"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/drawer_bg"
                android:text="@string/my_albums_txt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_my_friends"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/drawer_bg"
                android:text="@string/my_friends_txt"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/btn_my_fishing_log"
                style="@style/ButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@color/drawer_bg"
                android:text="@string/my_fishing_log_txt"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>