<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comment_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/commment_bg"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <TextView
        android:id="@+id/comment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/drawer_bg" />

    <TextView
        android:id="@+id/comment_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lorem Ipsum is the simply dummy text of printing and type setting industry"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/submitted_by"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="right"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12" />
</LinearLayout>