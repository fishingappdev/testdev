<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5">
        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_ic"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/fishlog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/drawer_bg"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="BIG FISH"/>
        <TextView
            android:id="@+id/log_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="21/04/2016"/>
        <TextView
            android:id="@+id/log_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toLeftOf="@id/log_date"
            android:maxLines="2"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_below="@id/fishlog_title"
            android:text="21/04/2016"/>
        <TextView
            android:id="@+id/place"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/log_detail"
            android:textColor="@color/drawer_bg"

            android:layout_marginTop="@dimen/dp_5"
            android:text="21/04/2016"/>
    </RelativeLayout>

</LinearLayout>